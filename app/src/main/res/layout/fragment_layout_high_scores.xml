<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="32dp"
        android:orientation="vertical"
        android:background="@drawable/bg_btn_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_high_score_addition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="High Score Addition operator : "
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_bold"/>
        <TextView
            android:id="@+id/tv_high_score_subtraction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="High Score Subtraction operator : "
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_bold"/>
        <TextView
            android:id="@+id/tv_high_score_multiplication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="High Score Multiplication operator : "
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_bold"/>
        <TextView
            android:id="@+id/tv_high_score_division"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="High Score Division operator : "
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_bold"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>